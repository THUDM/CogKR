{
  "graph": {
    "train_width": 256,
    "add_self_loop": true
  },
  "model": {
    "max_steps": 3,
    "max_nodes": 4,
    "max_neighbors": 1,
    "embed_size": 100,
    "hidden_size": 200,
    "topk": 1,
    "reward_policy": "direct",
    "baseline_lambda": 0.05,
    "use_rank": false
  },
  "optimizer": {
    "name": "Adam",
    "embed": {
      "lr": 1e-3
    },
    "summary": {
      "lr": 1e-5
    },
    "agent": {
      "lr": 1e-3
    },
    "config": {
      "weight_decay": 1e-4
    }
  },
  "pretrain_optimizer": {
    "lr": 0.0001
  },
  "trainer": {
    "weighted_sample": true,
    "ignore_relation": false,
    "meta_learn": false,
    "sample_weight": 1.0,
    "rollout_num": 16,
    "test_rollout_num": 100
  },
  "train": {
    "batch_size": 120,
    "test_batch_size": 64,
    "log_interval": 50,
    "evaluate_interval": 200,
    "max_steps": 10000,
    "entropy_beta": 0.05
  },
  "pretrain": {
    "batch_size": 64
  }
