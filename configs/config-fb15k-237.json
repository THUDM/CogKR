{
  "graph": {
    "train_width": 256,
    "test_width": 2000
  },
  "model": {
    "max_nodes": 3,
    "max_neighbors": 1,
    "embed_size": 200,
    "hidden_size": 200,
    "topk": 1,
    "reward_policy": "direct",
    "baseline_lambda": 0.02
  },
  "optimizer": {
    "name": "Adam",
    "embed": {
      "lr": 1e-5
    },
    "summary": {
      "lr": 1e-5
    },
    "agent": {
      "lr": 1e-4
    },
    "config": {
      "weight_decay": 1e-4
    }
  },
  "pretrain_optimizer": {
    "lr": 0.0001
  },
  "trainer": {
    "weighted_sample": true,
    "ignore_relation": false,
    "meta_learn": false,
    "sample_weight": 1.0,
    "rollout_num": 32
  },
  "train": {
    "batch_size": 256,
    "log_interval": 1000,
    "evaluate_interval": 5000,
    "max_steps": 100000
  },
  "pretrain": {
    "batch_size": 64
  }
}
